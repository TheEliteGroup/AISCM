<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Accepted Bids"
             x:Class="AISCM.AcceptedBidsView">
    <ContentPage.Content>
        <ListView  x:Name="lstView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="LightGray" Padding="13">
                            <StackLayout Orientation="Vertical">
                                <Label Text = "{Binding CropName}" FontSize="16"/>
                                <Label Text = "{Binding CropName}" FontSize="14"/>
                                <Label Text = "{Binding Quantity}" FontSize="14"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>